---
import Footer from "../components/Footer.astro";
import Head from "../components/header/Head.astro";
import Header from "../components/header/Header.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <Head title={title}/>
  <body>
    <Header/>
    <slot/>

     <Footer />
  </body>
</html>


<style lang="scss" is:global>
  :root {
    --elements: 5px;
  }

 


</style>
<script src="../scripts/Visualizer.ts"></script>
<script src="../scripts/SoundMaker.ts"></script>
<script src="../scripts/Shuffle.ts"></script>
<!--<script src="../scripts/Canvas.ts"></script>-->

<script is:inline>
    const discoverButton = document.getElementById("discover");
    const additional = document.getElementById("additional");
    

    if(discoverButton != null || discoverButton != undefined) {
         discoverButton.onclick = () => {
        additional.classList.remove("hidden");
        discoverButton.remove();
    }
    }

   
</script>

<style is:global lang="scss">
     .content {
        width: 750px;
        text-align: justify;
        line-height: 1.5em;

        @media (max-width: 764px) {
          width: 95%;
        }
      }
</style>