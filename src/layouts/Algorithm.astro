---
import Header from "../components/header/Header.astro";
import SortNav from "../components/visualiser/sortnav/SortNav.astro";
import SortNavLink from "../components/visualiser/sortnav/SortNavLink.astro";
import BigONotation, {
  Complexity,
} from "../components/visualiser/description/BigONotation.astro";
import Visualizer from "../components/visualiser/Visualizer.astro";
import Head from "../components/header/Head.astro";

export interface Props {
  title: string;
  best: Complexity;
  average: Complexity;
  worst: Complexity;
  space: Complexity;
}

const { title, best, average, worst, space } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <Head title={title}/>
  <body>
    <Header/>
    <div class="content">
      <SortNav>
        <SortNavLink href="/">Home</SortNavLink>
      </SortNav>

      <Visualizer />

      <div class="description">
        <div class="explanation">
          <h3>{title}</h3>
          <slot />
        </div>

        <div class="o-notation">
          <BigONotation
            worst={worst}
            best={best}
            average={average}
            space={space}
          />
          <p>Big O Notation defines the lower, average and upper bounds of an algorithm, where Time complexity determines the amount of operations, and Space complexity the amount of memory that can be used</p>
        </div>

        <div class="canvas">
          <a href="https://chechu.dev">
            <div class="background"></div>
            <div class="background-a"></div>

            <img
              width="350"
              height="300"
              src="/img/ChechuDEV.png"
              alt="Chechu DEV"
            />
          </a>
          <!--<canvas id="graph" width="350" height="300"> </canvas>-->
          <!--<span>Work in progress</span>-->
        </div>
      </div>
    </div>

    
  </body>
</html>
<style lang="scss" is:global>
  :root {
    --elements: 5px;
  }

 

  .content {
    display: flex;
    justify-content: center;
    gap: 25px;
    margin-left: auto;
    margin-right: auto;
        flex-direction: row;
    width: auto;

    @media (max-width: 720px) {

    flex-direction: column;
        width: 90%;
    }
  }

  .description {
    width: 350px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

   .o-notation {
    width: 350px;
}

  canvas {
    background-color: white;
    border-radius: 0.2em;
    width: 360px;
    height: 300px;
    background-image: repeating-linear-gradient(
        #ccc 0 1px,
        transparent 1px 100%
      ),
      repeating-linear-gradient(90deg, #ccc 0 1px, transparent 1px 100%);
    background-size: 30px 30px;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .canvas {
    position: relative;
    height: 300px;
    a{
        height: 300px;
    }
    span {
      position: absolute;
      color: #999;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);

      font-weight: 600;
      font-size: 40px;
      text-align: center;
    }

    a {
      display: block;
      border-radius: 0.2em;
      position: relative;

      &:hover {
        img {
          bottom: -2.5px;
          left: 2.5px;
        }

        .background {
          bottom: 2.5px;
          left: -2.5px;
        }
        .background-a {
          bottom: -7.5px;
          left: 7.5px;
        }
      }
      .background {
        position: absolute;
        border-radius: 0.2em;
        bottom: 0;
        left: 0;
        background-color: #ff9e00;
        width: 350px;
        height: 300px;
        transition: all 250ms ease-in-out;
      }
      .background-a {
        position: absolute;
        border-radius: 0.2em;
        bottom: 0;
        left: 0;
        background-color: #9d4edd;
        width: 350px;
        height: 300px;
        transition: all 250ms ease-in-out;
      }
      img {
        position: absolute;
        bottom: 0;
        left: 0;
        border-radius: 0.2em;
        box-shadow: 0px 0px 0px 0px rgba(255, 255, 255, 0.2);
        transition: all 250ms ease-in-out;
      }
    }
  }

 
</style>
<script src="../scripts/Visualizer.ts"></script>
<script src="../scripts/SoundMaker.ts"></script>
<script src="../scripts/Shuffle.ts"></script>
